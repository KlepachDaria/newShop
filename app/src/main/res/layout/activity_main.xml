<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


    <ImageView
            android:id="@+id/try_ImageView"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:src="@drawable/onmainact"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:contentDescription="@string/pictureWithCakes"/>


    <TextView
            android:id="@+id/tasty"
            android:layout_width="225dp"
            android:layout_height="109dp"

            android:layout_alignBottom="@+id/try_ImageView"
            android:layout_alignParentTop="true"

            android:text="Вкусно,   как у мамы"
            android:textColor="#FCFCFC"
            android:textSize="40dp"
            app:fontFamily="sans-serif-light"

            android:layout_marginTop="261dp"
            android:layout_marginBottom="200dp"
            android:layout_marginRight="158dp"
            android:layout_marginLeft="60dp"
            android:layout_marginEnd="130dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignLeft="@+id/try_ImageView"
            android:layout_alignRight="@+id/try_ImageView"
            android:layout_alignBottom="@+id/try_ImageView"
            android:layout_alignEnd="@+id/try_ImageView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/try_ImageView"

            android:layout_marginRight="130dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="450dp"

            android:text="@string/Name"
            android:textSize="15dp"
            android:textColor="#FCFCFC"
            app:fontFamily="@font/montserrat"
            tools:fontFamily="sans-serif-light"

            android:layout_marginEnd="130dp"
            android:layout_marginStart="60dp"/>

    <Button
            android:id="@+id/listButton"
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:background="#FF473A"
            android:text="@string/zakaz"
            android:textColor="#ffffff"


            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="@+id/try_ImageView"
            android:gravity="center"


            android:layout_alignBottom="@+id/try_ImageView"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="131dp"
            android:layout_marginEnd="60dp"/>
</RelativeLayout>